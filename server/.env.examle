# SERVER CONFIGURATION

# Port on which the backend server will run
PORT=5000

# Frontend application URL (used for CORS)
FRONTEND_URL=http://localhost:3000

# Environment mode: development | production
NODE_ENV=development

# DATABASE CONFIGURATION

# Database connection URL
DATABASE_URL=postgresql://user:password@localhost:5432/linq_messenger

# MAILER SETTINGS

# SMTP configuration for sending emails
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password

# JWT AUTHENTICATION

# Secrets for signing access and refresh tokens
ACCESS_TOKEN_SECRET=super_secret_access
ACCESS_TOKEN_EXPIRES=15m

REFRESH_TOKEN_SECRET=super_secret_refresh
REFRESH_TOKEN_EXPIRES=7d

# Google OAuth

GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# SUPABASE INTEGRATION (optional)

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
